<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">//Theme.AppCompat.Light.NoActionBar

    </style>
    <!-- Transparent theme. -->
    <style name="TransparentTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@android:color/white</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@android:color/white</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/title_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/title_color</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- navi bottom style -->
    <style name="base_navi_bottom_contain">
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
	<style name="base_navi_bottom_item">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/base_navi_bottom_text</item>
        <item name="android:textSize">@dimen/navigation_text_bottom</item>
    </style>

    <!-- popupwindow anim -->
    <style name="base_anim_bottom_in">
        <item name="android:windowEnterAnimation">@anim/base_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/base_bottom_out</item>
    </style>
    <style name="base_anim_top_in">
        <item name="android:windowEnterAnimation">@anim/base_top_in</item>
        <item name="android:windowExitAnimation">@anim/base_top_out</item>
    </style>
    <style name="base_anim_alpha">
        <item name="android:windowEnterAnimation">@anim/base_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/base_alpha_out</item>
    </style>
    <style name="base_anim_hide">
        <item name="android:windowEnterAnimation">@anim/base_anim_show</item>
        <item name="android:windowExitAnimation">@anim/base_anim_hide</item>
    </style>
    <!-- listview style -->
    <style name="base_style_listview">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/line_color</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:listSelector">@android:color/transparent</item>          
    </style>
    <!-- text style -->
    <style name="base_text_black_16">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="base_text_black_14">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="base_text_black_12">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="base_text_grey_deep_16">
        <item name="android:textColor">@color/text_grey_deep</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="base_text_grey_deep_14">
        <item name="android:textColor">@color/text_grey_deep</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="base_text_grey_deep_12">
        <item name="android:textColor">@color/text_grey_deep</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="base_text_grey_light_16">
        <item name="android:textColor">@color/text_grey_light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="base_text_grey_light_14">
        <item name="android:textColor">@color/text_grey_light</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="base_text_grey_light_12">
        <item name="android:textColor">@color/text_grey_light</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="base_text_white_18">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="base_text_white_16">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="base_text_white_14">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="base_text_white_12">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="base_text_choose_images_text_18">
        <item name="android:textColor">@color/choose_images_text</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="base_text_choose_images_text_16">
        <item name="android:textColor">@color/choose_images_text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="base_text_choose_images_text_14">
        <item name="android:textColor">@color/choose_images_text</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- background style -->
    <style name="base_background_grey">
        <item name="android:background">@color/bg_grey</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>
    <style name="base_background_white">
        <item name="android:background">@color/bg_white</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>
    <style name="base_pop_background">
        <item name="android:background">@color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>
    <!-- line style -->
    <style name="base_line_grey_horizontal">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="base_line_grey_vertical">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0.5dp</item>
    </style>
    <!-- SwipeBackLayout style -->
    <style name="SwipeBackLayout">
        <item name="edge_size">50dp</item>
        <item name="shadow_left">@drawable/base_shadow_left</item>
        <item name="shadow_right">@drawable/base_shadow_right</item>
        <item name="shadow_bottom">@drawable/base_shadow_bottom</item>
    </style>
    <style name="SlideRight" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/base_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/base_slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/base_slide_in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/base_slide_out_to_right</item>
    </style>

</resources>
