<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- navi bottom style -->
    <style name="base_footbar_radiogroup">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/navi_bottom_text_on</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
	<style name="base_footbar_radio">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/base_navi_bottom_text</item>
        <item name="android:textSize">@dimen/navigation_text_bottom</item>
        <item name="android:button">@null</item>
    </style>
    
    <style name="base_anim_bottom_in">
        <item name="android:windowEnterAnimation">@anim/base_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/base_bottom_out</item>
    </style>
    
    <style name="base_anim_top_in">
        <item name="android:windowEnterAnimation">@anim/base_top_in</item>
        <item name="android:windowExitAnimation">@anim/base_top_out</item>
    </style>

    <style name="base_anim_alpha">
        <item name="android:windowEnterAnimation">@anim/base_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/base_alpha_out</item>
    </style>
    <style name="base_anim_popupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>
    
    <style name="base_style_listview">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/line_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@android:color/transparent</item>          
    </style>
    
    <style name="base_style_xlistview">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/line_color</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:listSelector">@android:color/transparent</item>   
        <item name="android:footerDividersEnabled">false</item>                    
    </style>
    
    <style name="base_style_textview_deep_16">
