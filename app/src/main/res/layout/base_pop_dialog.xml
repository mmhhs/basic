<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" 
    android:id="@+id/base_pop_dialog_contain"
    style="@style/base_pop_background"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/base_pop_load_width"
        android:layout_height="@dimen/base_pop_load_height"
        card_view:cardElevation="10dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="8dp"
        >
        <include layout="@layout/base_pop_load_item"/>
        </android.support.v7.widget.CardView>


    
    

</LinearLayout>