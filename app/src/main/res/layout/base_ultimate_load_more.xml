<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context="com.widget.sample.SampleUltimateActivity"
    >

    <ProgressBar
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:indeterminateDrawable="@drawable/base_progress_rotate_loading_360"
        android:indeterminateDuration="1000"
        android:visibility="gone"
        android:indeterminate="true"
        />

    <com.widget.spin.ProgressWheel5
        android:id="@+id/base_ultimate_load_more_progress_wheel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        wheel:matProg_barColor="#5588FF"
        wheel:matProg_progressIndeterminate="true"
        android:layout_margin="15dp"
        />

    <include
        android:layout_width="match_parent"
        android:layout_height="0dp"
        layout="@layout/base_end_bottom"
        android:id="@+id/base_ultimate_load_more_end" />

</LinearLayout>
