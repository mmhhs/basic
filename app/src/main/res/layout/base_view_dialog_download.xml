<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/base_view_dialog_download_container"
    >

    <android.support.v7.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="2dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/text_black"
                android:text="下载更新"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:visibility="visible"
                android:id="@+id/base_view_dialog_download_title"/>



            <ProgressBar
                android:id="@+id/base_view_dialog_download_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:progress="80"
                android:progressDrawable="@drawable/base_progressbar" />

            <TextView
                android:id="@+id/base_view_dialog_download_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_margin="20dp"
                android:textColor="@color/text_grey_deep"
                android:textSize="14sp"
                android:text="0 %"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/base_view_dialog_download_cancel_layout"
                android:orientation="vertical" >
                <View
                    style="@style/base_line_grey_horizontal"
                    />
                <TextView
                    android:id="@+id/base_view_dialog_download_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="@drawable/base_selector_bg"
                    android:layout_marginBottom="2dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_black"
                    android:text="取消"/>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
