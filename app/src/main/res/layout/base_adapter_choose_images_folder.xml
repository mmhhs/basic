<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_choose_images_folder"
        android:gravity="center_vertical"
        android:id="@+id/base_adapter_choose_images_folder_layout">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:id="@+id/base_adapter_choose_images_folder_imageView"
            android:layout_margin="15dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/base_style_textview_deep_16"
                android:text="Large Text"
                android:id="@+id/base_adapter_choose_images_folder_name"

                android:maxLines="2" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/base_style_textview_deepgrey_14"
                android:text="2å¼ "
                android:id="@+id/base_adapter_choose_images_folder_count"
                android:layout_marginTop="5dp" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/base_adapter_choose_images_folder_select"
            android:background="@drawable/base_choose_images_folder_select"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        </LinearLayout>




</LinearLayout>
